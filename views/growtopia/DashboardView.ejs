<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SVPS Login Menu</title>

    <link rel="stylesheet" href="/base.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <!-- FORCE BLACK BACKGROUND -->
    <style>
        html, body {
            background: #0c0c0c !important;
        }

        .gold-glow {
            box-shadow:
                0 0 10px rgba(212,175,55,0.4),
                0 0 25px rgba(212,175,55,0.2),
                0 0 50px rgba(212,175,55,0.1);
        }

        .gold-shimmer {
            background: linear-gradient(
                120deg,
                #b8860b 0%,
                #ffd700 50%,
                #b8860b 100%
            );
            background-size: 200% auto;
            animation: shimmer 3s linear infinite;
        }

        @keyframes shimmer {
            to {
                background-position: 200% center;
            }
        }
    </style>
</head>

<body>

<div class="w-screen h-screen flex justify-center items-center">

    <div class="border-2 border-[#d4af37]
                p-6 text-[#f5e6b3]
                bg-[#141414]
                min-w-[50vw]
                rounded-xl
                gold-glow">

        <h1 class="text-center text-3xl font-bold mb-2 gold-shimmer text-transparent bg-clip-text">
            <%= cnf.name %> Menu
        </h1>

        <p class="opacity-90 text-[#e6c76b] mb-4">
            You are now entering the login page of this server. Please enter your
            <span class="font-semibold text-[#ffd700]">GrowID</span> and
            <span class="font-semibold text-[#ffd700]">Password</span>
            if you already have an account, or log in as a guest.
        </p>

        <form action="/player/growid/login/validate"
              accept-charset="UTF-8"
              role="form"
              autocomplete="off"
              method="post">

            <div class="mb-3">
                <label class="block text-[#ffd700]">GrowID:</label>
                <div class="flex items-center border border-[#b8860b]
                            rounded bg-[#1a1a1a] px-3 py-2 gap-2">
                    <i class="fas fa-user text-[#d4af37]"></i>
                    <input type="text"
                           name="growId"
                           id="loginGrowId"
                           class="w-full bg-[#1a1a1a] text-[#f5e6b3]
                                  placeholder-[#a8892f] focus:outline-none"
                           placeholder="Enter your growid"
                           required>
                </div>
            </div>

            <div class="mb-4">
                <label class="block text-[#ffd700]">Password:</label>
                <div class="flex items-center border border-[#b8860b]
                            rounded bg-[#1a1a1a] px-3 py-2 gap-2">
                    <i class="fas fa-lock text-[#d4af37]"></i>
                    <input type="password"
                           name="password"
                           id="loginPassword"
                           class="w-full bg-[#1a1a1a] text-[#f5e6b3]
                                  placeholder-[#a8892f] focus:outline-none"
                           placeholder="Enter your password"
                           required>
                    <button type="button" id="toggleLogPassword"
                            class="text-[#d4af37] text-xs">
                        <i class="fas fa-eye-slash"></i>
                    </button>
                </div>
            </div>

            <div class="flex flex-col md:flex-row gap-3">
                <button type="submit"
                        class="px-4 py-2 rounded
                               bg-gradient-to-r from-[#b8860b] to-[#ffd700]
                               text-black font-bold w-full
                               hover:scale-105 transition duration-300">
                    Login
                </button>

                <button type="button"
                        id="regisButton"
                        class="px-4 py-2 rounded
                               bg-gradient-to-r from-[#b8860b] to-[#ffd700]
                               text-black font-bold w-full
                               hover:scale-105 transition duration-300">
                    Create New GrowID
                </button>
            </div>

        </form>
    </div>
</div>

<script>
const growId = document.getElementById("loginGrowId");
const password = document.getElementById("loginPassword");
const form = document.querySelector("form");

document.getElementById('toggleLogPassword').addEventListener('click', function () {
    const LpasswordField = document.getElementById('loginPassword');
    const LpasswordFieldType = LpasswordField.getAttribute('type');
    if (LpasswordFieldType === 'password') {
        LpasswordField.setAttribute('type', 'text');
        this.innerHTML = '<i class="fas fa-eye"></i>';
    } else {
        LpasswordField.setAttribute('type', 'password');
        this.innerHTML = '<i class="fas fa-eye-slash"></i>';
    }
});

document.getElementById("regisButton").addEventListener("click", function () {
    const token = btoa(`_token=NONE&growId=&password=`);
    window.location.href = "/player/growid/login/validate?data=" + encodeURIComponent(token);
});

form.addEventListener("submit", async (e) => {
    e.preventDefault();
    const token = btoa(`_token=NONE&growId=${growId.value}&password=${password.value}`);
    window.location.href = "/player/growid/login/validate?data=" + encodeURIComponent(token);
});
</script>

</body>
</html>
